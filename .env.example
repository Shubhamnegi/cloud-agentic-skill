# ─── App ──────────────────────────────────────────────────────
APP_NAME=Cloud Agentic Skill Manager
DEBUG=false

# ─── OpenSearch / Elasticsearch ──────────────────────────────
ELASTICSEARCH_URL=http://localhost:9200
# For authenticated clusters (e.g. hosted OpenSearch):
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
# Set to false if using self-signed TLS certs:
ELASTICSEARCH_VERIFY_CERTS=true
ELASTICSEARCH_INDEX=agent_skills
ELASTICSEARCH_USER_INDEX=skill_users
ELASTICSEARCH_API_KEY_INDEX=skill_api_keys

# ─── Embedding Model ─────────────────────────────────────────
# Local: all-MiniLM-L6-v2 (384 dims) or all-mpnet-base-v2 (768 dims)
# Cloud: text-embedding-3-small (requires OPENAI_API_KEY)
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMS=384
# Path where the model is stored on disk (mount a PVC here in K8s / Docker)
MODEL_CACHE_DIR=./models

# ─── Security ─────────────────────────────────────────────────
SECRET_KEY=change-me-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=60
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin

# ─── Backend ──────────────────────────────────────────────────
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# ─── Dashboard ────────────────────────────────────────────────
BACKEND_URL=http://localhost:8000
