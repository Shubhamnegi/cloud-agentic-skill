FROM python:3.12-slim

WORKDIR /app

# Install uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /bin/

# Project metadata for dependency resolution
COPY pyproject.toml uv.lock* ./

# App code
COPY dashboard/ dashboard/

ENV PATH="/app/.venv/bin:$PATH"

EXPOSE 8501

CMD ["sh", "-c", "uv sync --frozen --no-dev --no-install-project --extra dashboard && streamlit run dashboard/app.py --server.port=8501 --server.address=0.0.0.0 --server.headless=true"]
